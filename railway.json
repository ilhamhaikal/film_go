{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
        "builder": "NIXPACKS"
    },
    "deploy": {
        "startCommand": "go run ./cmd/main.go",
        "healthcheckPath": "/",
        "healthcheckTimeout": 100,
        "restartPolicyType": "ON_FAILURE",
        "restartPolicyMaxRetries": 10
    },
    "services": [
      {
        "name": "film_go",
        "buildCommand": "go mod download && go build -o out ./cmd",
        "startCommand": "./out"
      }
    ]
}
